<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.wit.mobileapp.spotmebro.DeleteConversations">


<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Choose a Conversation"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />


<ListView
    android:id="@+id/newListView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="56dp"
    />


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="bottom">


    <Button
        android:id="@+id/Logout_Button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:onClick="signOut"
        android:text="Logout" />

    <Button
        android:id="@+id/back_sign"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Back"
        android:onClick="GoToMain"/>

    <Button
        android:id="@+id/gotodelete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Done Editing"
        android:onClick="GoToDelete"/>

</LinearLayout>




</LinearLayout>

</android.support.constraint.ConstraintLayout>
